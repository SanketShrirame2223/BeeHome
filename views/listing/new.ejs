<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">

     <h3>Create a Listing</h3>

 <form method="POST" action="/listings" class="needs-validation new-form" novalidate enctype="multipart/form-data"> <!-- multipart/form data so that we can end files through form -->
  <div class="mb-3">
<label for="title" class="form-label">Enter Title</label>

      <input 
      name="listing[title]" 
      placeholder="Insert Title Here" 
      type="text" 
      class="form-control" 
      id="title" 
      required
      />
      <div class="valid-feedback">Title looks good!</div>
      <div class="invalid-feedback">Enter a Title</div>
  </div>

      

      <div class="mb-3">
<label for="description" class="form-label">Enter Description</label>

        <textarea
        name="listing[description]"
        placeholder="Words go here. Good ones. Real good ones."
        class="form-control"
        id="description"
        required
      ></textarea>
      <div class="invalid-feedback">Enter Description line</div>
      </div>


    

      
      <div class="mb-3">
<label for="image" class="form-label">Uplode Image</label>

         <input
        name="listing[image]"
        placeholder="Upload something that wonâ€™t get us sued, please"
        type="file"
        class="form-control"
        id="image"
        required
      />
      
      </div>

     <div class="row">
 <div class="mb-3 col-md-4" >
<label for="price" class="form-label">Enter Price</label>

       <input 
       name="listing[price]" 
       placeholder="Priceless? Nice try" 
       class="form-control"
       id="price" 
       />
      <div class="invalid-feedback">Enter Price</div>
      </div>


      <div class="mb-3 col-md-8"> 
<label for="country" class="form-label">Enter Country</label>

         <input 
         name="listing[country]" 
         placeholder="Wakanda forever, but pick a real one" 
         type="text" 
         class="form-control" 
         id="country"
         required
         />
      <div class="invalid-feedback">Enter Country</div>
      </div>
     </div>
     


      <div class="mb-3">
<label for="location" class="form-label">Enter Location</label>

        <input
        name="listing[location]"
        placeholder="Location.exe running... needs input"
        type="text"
        class="form-control"
        id="location"
        required
      />
      <div class="invalid-feedback">Enter Location</div>
      </div>
      <button class="btn add-button mt-2 mb-3">Add</button>
    </form>



  </div>
</div>

 